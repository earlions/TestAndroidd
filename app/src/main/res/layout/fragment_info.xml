<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:id="@+id/rl_sitt"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewData"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_width="161dp"
            android:textSize="20sp"
            android:text="@string/buuy"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp" />
        <TextView
            android:id="@+id/textViewDataSale"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_width="161dp"
            android:textSize="20sp"
            android:text="@string/buy"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewFinal"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:text="@string/benefit"
            android:layout_marginTop="1dp"
            android:layout_width="80dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_sitt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textProfit"
        android:textSize="20sp"
        android:layout_below="@+id/recyclerViewMin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>